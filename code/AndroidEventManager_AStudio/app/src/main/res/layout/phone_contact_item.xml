<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/phoneContactEntry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="_"
        android:id="@+id/checkBoxSelectContact"
        android:layout_alignTop="@+id/contactName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <QuickContactBadge android:id="@android:id/icon"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_width="?android:attr/listPreferredItemHeight"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_contact_picture_holo_light"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_alignTop="@+id/checkBoxSelectContact"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/emailId"
        android:layout_below="@id/contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@android:id/icon" />
</RelativeLayout>
